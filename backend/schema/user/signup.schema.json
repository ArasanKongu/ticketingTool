{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "username": {
            "type": "string"
        },
        "email": {
            "type": "string"
        },
        "password": {
            "type": "string",
            "minLength": 8
        },
        "confirmPassword": {
            "type": "string",
            "minLength": 8
        }
    },
    "required": ["username", "email", "password", "confirmPassword"],
    "additionalProperties": false
}
